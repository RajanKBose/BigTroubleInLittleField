<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdeede"
    tools:context="thebestgroup.bigtroubleinlittlefield.MessagingActivity">

    <!--<Button-->
        <!--android:id="@+id/map"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#CC5500"-->
        <!--android:onClick="startMapActivity"-->
        <!--android:text="map"-->
        <!--android:textColor="#FFFFFF" />-->

    <ListView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input"
        android:layout_below="@+id/map"
        android:background="#F6F6F6"
        android:stackFromBottom="true"
        android:transcriptMode="normal" />

    <EditText
        android:id="@+id/input"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:gravity="top"
        android:hint="@string/enter_message_here"
        android:lines="4"
        android:minLines="2"
        android:textCursorDrawable="@null"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/input"

        android:background="#CC5500"
        android:onClick="onClick"
        android:text="Send"
        android:textColor="#FFFFFF" />


</RelativeLayout>
